@model MerchShop.Views.DTO.ChangePasswordDTO;
@{
ViewData["Title"] = "Profile Settings";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="card-header text-center">
            <h2 class="section-heading">Your Profile</h2>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
            <div class="alert alert-success mb-3">@TempData["SuccessMessage"]</div>
            }
            @if (ViewBag.UserEmail != null)
            {
            <div class="mb-3">
                <label class="form-label">Your Email:</label>
                <p class="form-control-plaintext text-white font-bold">@ViewBag.UserEmail</p>
            </div>
            }
            <h3 class="text-xl font-semibold mb-3 text-center section-heading">Change Your Password</h3>

            <form asp-controller="Profile" asp-action="UserProfile" method="post">
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label"></label>
                    <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn custom-btn-red w-100 mt-4">Update Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}